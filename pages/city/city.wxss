}

.scrollview {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow-x: auto;
	overflow-y: hidden;
	-webkit-overflow-scrolling: touch;
}

.city_list_len {
	width: 400%;
	height: 100%;
}

.city_list .city_list_active {
	float: left;
	width: 25%;
	height: 100%;
	overflow: hidden;
}

.city_list .city_list_active image {
	display: block;
	float: left;
	width: 207rpx;
	height: 172rpx;
	margin-left: -28rpx;
	margin-top: 20rpx;
}

.city_list .city_list_active image.color_none,
.dangao image.color_none {
	filter: grayscale(100%);
}

.city_list .city_list_active image:nth-child(4n+1) {
	margin-left: 0rpx;
}

